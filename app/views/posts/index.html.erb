<!--animalpics-->
<div class = "container">
  <h1>投稿一覧</h1>
  <div class ="row no-gutters">
    <% @random.each do |post| %>
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.animalpics[0], size: "200x200"%>
      <% end %>
      <%= image_tag post.user.get_profile_image, size: "30x30" %>
      <%= post.user.name %>
    <% end %>
  </div>
</div>