<h1>みんなの投稿</h1>
 <div class = "container">
  <div class="row">
   <% @random.each do |post| %>
    <div class="col-md-4">
     <div class="post-image">
      <%= link_to post_path(post.id) do %>
       <%= image_tag post.animalpics[0], size: "200x200"%>
      <% end %>
     </div>
     <div class="user-image">
      <%= image_tag post.user.get_profile_image, size: "30x30" %>
      <%= post.user.name %>
     </div>
    </div>
   <% end %>
  </div>
  <%= link_to new_index_path do %>
   <h3>新着順</h3>
  <% end %>
 </div>
</div>